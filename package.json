{
	"name": "generic-api",
	"description": "main api",
	"scripts": {
		"test": "jest --watch",
		"start": "node build/index.js",
		"start:watch": "concurrently \"nodemon -r dotenv/config src/index.ts\" \"nodemon -x tsoa spec-and-routes\"",
    "prebuild": "tsoa spec-and-routes",
		"build": "tsc",
		"build:watch": "tsc -w",
		"dockerize": "docker build .",
		"pg": "docker-compose up -d --force-recreate --renew-anon-volumes pg && docker-compose logs pg",
		"pg:debug": "docker-compose exec pg psql -U pguser -W pgdatabase"
	},
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.19.1",
		"cors": "^2.8.4",
		"csv": "^6.0.5",
		"csv-parse": "^5.0.4",
		"dotenv": "^4.0.0",
		"express": "^4.15.4",
		"joi": "^17.4.1",
		"pg": "^8.7.1",
		"swagger-ui-express": "^4.3.0",
		"tsoa": "^3.14.1"
	},
	"devDependencies": {
		"@types/csv-parse": "^1.2.2",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.0",
		"@types/joi": "^17.2.3",
		"@types/node": "^16.4.1",
		"@types/pg": "^8.6.1",
		"@types/swagger-ui-express": "^4.1.3",
		"concurrently": "^7.0.0",
		"jest": "^27.0.6",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.4.0",
		"typescript": "^4.3.5"
	}
}

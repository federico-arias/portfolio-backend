		"joi": "^17.4.1",
		"pg": "^8.7.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.0",
		"@types/joi": "^17.2.3",
		"@types/node": "^16.4.1",
		"@types/pg": "^8.6.1",
		"jest": "^27.0.6",
		"nodemon": "^2.0.7",
		"prettier": "^2.5.1",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	}
